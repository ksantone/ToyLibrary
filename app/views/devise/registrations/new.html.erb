<div class="col-md-6 col-md-offset-3">

	<div class="submission-form">
		<div  class="form-group">
			<h1 class="title">sign-up here</h1>
		</div>
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= f.error_notification %>

			<div  class="form-group">
				<%= f.input :email, required: true, autofocus: true %>
			</div>

			<div  class="form-group">
				<%= f.input :first_name, label: "First Name", required: true %>
			</div>

			<div  class="form-group">
				<%= f.input :last_name, label: "Last Name", required: true %>
			</div>


			<div  class="form-group">
				<%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
			</div>

			<div class="form-group">
				<%= f.input :password_confirmation, required: true %>
			</div>

			<div class="form-group">
				<label>
    				Upload A Profile Photo
				</label>
				<%= f.file_field :account_img, required: true %>
			</div>

			<div  class="form-group">
				<%= f.button :submit, "sign up", class: "btn btn-primary btn-block" %>
			</div>

		<% end %>

		<%= render "devise/shared/links" %>
	</div>

</div>