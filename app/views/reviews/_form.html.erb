<%= simple_form_for([@book, @book.reviews.build]) do |f| %>
	<div  class="form-group">
		<%= f.select :rating, 1..5, :prompt => "Select a Rating" %>
	</div>
	<div  class="form-group">
		<%= f.input :comment %>
	</div>
	<div  class="form-group">
		<%= f.button :submit, "Add Review", class: "btn btn-primary btn-block" %>
	</div>
<% end %>